    <children>
        <ImageView fx:id="ImmaginaDiSfondo" fitHeight="1053.0" fitWidth="1238.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/sfondo parquet.jpg" />
            </image>
        </ImageView>
        <ImageView fx:id="CranioImage" fitHeight="105.0" fitWidth="128.0" layoutX="861.0" layoutY="611.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/Publisher.png" />
            </image>
        </ImageView>
      <TextArea fx:id="chatTextArea" layoutX="96.0" layoutY="144.0" prefHeight="451.0" prefWidth="838.0" style="-fx-background-color: transparent;">
         <font>
            <Font name="Arial" size="14.0" />
         </font></TextArea>
      <TextField fx:id="messageTextField" layoutX="96.0" layoutY="609.0" prefHeight="24.0" prefWidth="646.0">
         <font>
            <Font name="Arial" size="14.0" />
         </font></TextField>
      <Button fx:id="Send" layoutX="774.0" layoutY="609.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="44.0" prefWidth="93.0" text="Send">
