<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="AnchorPaneWelcome" prefHeight="408.0" prefWidth="608.0" style="-fx-background-size: cover; -fx-background-image: url('images/Display_1.jpg');" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.Gui.WelcomeController">
   <children>
      <ImageView fx:id="anchWelcome" fitHeight="422.0" fitWidth="630.0" layoutX="-7.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Display_1.jpg" />
         </image>
      </ImageView>
      <Button fx:id="joinButton" layoutX="320.0" layoutY="268.0" mnemonicParsing="false" onAction="#startJoinAction" text="JOIN THE GAME">
         <font>
            <Font name="Arial" size="13.0" />
         </font>
      </Button>
      <Label layoutX="127.0" layoutY="227.0" prefHeight="32.0" prefWidth="369.0" text="WELCOME TO MY SHELFIE">
         <font>
            <Font name="Arial" size="28.0" />
         </font>
         <textFill>
            <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.9666666388511658" green="1.0" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </RadialGradient>
         </textFill>
      </Label>
      <Button fx:id="createGameButton" layoutX="177.0" layoutY="268.0" mnemonicParsing="false" onAction="#startCreateGameAction" prefHeight="24.0" prefWidth="127.0" text="CREATE GAME">
         <font>
            <Font name="Arial" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
